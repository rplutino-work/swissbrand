{
  "flex-layout.row#deals": {
    "children": ["slider-layout"],
    "props": {
      "blockClass":  ["store-container", "deals"]
    }
  },
  "slider-layout": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 1
      },
      "infinite": true,
      "showNavigationArrows": "desktopOnly",
      "showPaginationDots": "never",
      "blockClass": "deals-carousel"
    },
    "children": [
      "flex-layout.col#deals1",
      "flex-layout.col#deals2",
      "flex-layout.col#deals3",
      "flex-layout.col#deals4"
    ]
  },

  "flex-layout.col#deals1": {
    "children": ["flex-layout.row#deals1", "flex-layout.row#deals1-2"],
    "props": {
      "blockClass": "deals-col"
    }
  },
  "flex-layout.row#deals1": {
    "children": ["image#deals1"],
    "props": {
      "blockClass": "deals-row-warapper"
    }
  },
  "flex-layout.row#deals1-2": {
    "children": ["rich-text#deals1", "rich-text#deals1-2"],
    "props": {
      "blockClass": "deals-row-content",
      "colSizing": "auto"
    }
  },
  "image#deals1": {
    "props": {
      "src": "assets/svgs/skf-icon-products-selection.svg"
    }
  },
  "rich-text#deals1": {
    "props": {
      "text": "Selección de productos",
      "blockClass": "deals-title",
      "textAlignment": "LEFT"
    }
  },
  "rich-text#deals1-2": {
    "props": {
      "text": "Compra rápida y sencilla.",
      "blockClass": "deals-subtitle",
      "textAlignment": "LEFT"
    }
  },
